---
// SocialLinks.astro
// 官方社群連結圖標組件
// 這些連結是固定常量，不屬於 i18n 翻譯內容
import { SOCIAL_LINKS } from '@/config/app';
---

<nav aria-label="Social links" class="w-full flex justify-center items-center gap-3">
  <ul class="flex items-center gap-3">
    <li>
      <a 
        href={SOCIAL_LINKS.channel}
        target="_blank"
        rel="noopener noreferrer"
        aria-label="Telegram Channel"
        class="p-2 rounded hover:bg-black/5 text-textSubtle transition-opacity hover:opacity-80"
      >
        <svg width="24" height="24" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
          <path fill="currentColor" d="M9.5 15.5l-.3 4.2c.4 0 .6-.2.8-.4l2-1.9 4.2 3.1c.8.4 1.4.2 1.6-.7l2.9-13.6c.3-1.2-.4-1.7-1.2-1.4L3.6 9.2c-1.1.4-1.1 1-.2 1.3l4.3 1.3 9.9-6.2c.5-.3.9-.1.6.2"/>
        </svg>
      </a>
    </li>
    <li>
      <a 
        href={SOCIAL_LINKS.group}
        target="_blank"
        rel="noopener noreferrer"
        aria-label="Telegram Group"
        class="p-2 rounded hover:bg-black/5 text-textSubtle transition-opacity hover:opacity-80"
      >
        <svg width="24" height="24" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
          <path fill="currentColor" d="M9.5 15.5l-.3 4.2c.4 0 .6-.2.8-.4l2-1.9 4.2 3.1c.8.4 1.4.2 1.6-.7l2.9-13.6c.3-1.2-.4-1.7-1.2-1.4L3.6 9.2c-1.1.4-1.1 1-.2 1.3l4.3 1.3 9.9-6.2c.5-.3.9-.1.6.2"/>
        </svg>
      </a>
    </li>
    <li>
      <a 
        href={SOCIAL_LINKS.x}
        target="_blank"
        rel="noopener noreferrer"
        aria-label="X / Twitter"
        class="p-2 rounded hover:bg-black/5 text-textSubtle transition-opacity hover:opacity-80"
      >
        <svg width="24" height="24" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
          <path fill="currentColor" d="M3 3h4l5.1 7L17 3h4l-7.2 9.8L21 21h-4l-5.4-7.5L7 21H3l7.9-10.8L3 3z"/>
        </svg>
      </a>
    </li>
    <li>
      <a 
        href={SOCIAL_LINKS.youtube}
        target="_blank"
        rel="noopener noreferrer"
        aria-label="YouTube"
        class="p-2 rounded hover:bg-black/5 text-textSubtle transition-opacity hover:opacity-80"
      >
        <svg width="24" height="24" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
          <path fill="currentColor" d="M3 7.5C3 6.1 4.1 5 5.5 5h13c1.4 0 2.5 1.1 2.5 2.5v9c0 1.4-1.1 2.5-2.5 2.5h-13C4.1 19 3 17.9 3 16.5v-9zM10 9v6l5-3-5-3z"/>
        </svg>
      </a>
    </li>
  </ul>
</nav>
